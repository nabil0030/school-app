<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A2E"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Suivi du Dossier"
                android:textSize="28sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:letterSpacing="0.02"
                android:layout_marginBottom="8dp"/>

            <View
                android:layout_width="80dp"
                android:layout_height="3dp"
                android:background="#00D4FF"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vérification des documents d'inscription"
                android:textSize="14sp"
                android:textColor="#B0BEC5"
                android:alpha="0.8"/>
        </LinearLayout>

        <!-- STATUS SECTION -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#16213E"
            android:padding="20dp"
            android:layout_marginBottom="24dp"
            android:elevation="8dp"
            android:backgroundTint="#16213E">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <!-- Status Icon -->
                <LinearLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="#00D4FF"
                    android:gravity="center"
                    android:layout_marginEnd="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="✓"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Statut du dossier"
                        android:textSize="12sp"
                        android:textColor="#B0BEC5"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="En attente de validation"
                        android:textSize="18sp"
                        android:textColor="#00D4FF"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- DOCUMENTS TITLE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Documents requis"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- CIN CARD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#16213E"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="8dp"
            android:backgroundTint="#16213E">

            <!-- CIN Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <!-- Number Badge -->
                <LinearLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="#0F3460"
                    android:gravity="center"
                    android:layout_marginEnd="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="16sp"
                        android:textColor="#00D4FF"
                        android:textStyle="bold"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carte Nationale d'Identité"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>

            <!-- CIN Image Preview -->
            <ImageView
                android:id="@+id/imgCinStatus"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:background="#0F3460"
                android:layout_marginBottom="12dp"
                android:visibility="gone"/>

            <!-- CIN Status Message -->
            <TextView
                android:id="@+id/tvCinMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Document non téléchargé"
                android:textSize="14sp"
                android:textColor="#FF6B8E"
                android:gravity="center"
                android:padding="12dp"
                android:background="#0F3460"/>
        </LinearLayout>

        <!-- BAC CARD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#16213E"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:elevation="8dp"
            android:backgroundTint="#16213E">

            <!-- BAC Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <!-- Number Badge -->
                <LinearLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="#0F3460"
                    android:gravity="center"
                    android:layout_marginEnd="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textSize="16sp"
                        android:textColor="#00D4FF"
                        android:textStyle="bold"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diplôme de Baccalauréat"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>

            <!-- BAC Image Preview -->
            <ImageView
                android:id="@+id/imgBacStatus"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:background="#0F3460"
                android:layout_marginBottom="12dp"
                android:visibility="gone"/>

            <!-- BAC Status Message -->
            <TextView
                android:id="@+id/tvBacMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Document non téléchargé"
                android:textSize="14sp"
                android:textColor="#FF6B8E"
                android:gravity="center"
                android:padding="12dp"
                android:background="#0F3460"/>
        </LinearLayout>

        <!-- ACTION BUTTON -->
        <Button
            android:id="@+id/btnGoProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gérer mes documents"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="#00D4FF"
            android:textColor="#0A192F"
            android:paddingVertical="16dp"
            android:layout_marginBottom="16dp"/>

        <!-- INFO FOOTER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16px"
            android:background="#0F3460"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ⓘ"
                android:textSize="14sp"
                android:textColor="#00D4FF"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tous les documents sont vérifiés automatiquement"
                android:textSize="12sp"
                android:textColor="#B0BEC5"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0F14"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="32dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mon Profil"
                android:textSize="28sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Student Info Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1E293B"
            android:padding="24dp"
            android:layout_marginBottom="24dp"
            android:elevation="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Informations Personnelles"
                android:textSize="20sp"
                android:textColor="#22C55E"
                android:textStyle="bold"
                android:layout_marginBottom="20dp" />

            <TextView
                android:id="@+id/tvNom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nom : "
                android:textSize="16sp"
                android:textColor="#CBD5E1"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvPrenom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prénom : "
                android:textSize="16sp"
                android:textColor="#CBD5E1"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email : "
                android:textSize="16sp"
                android:textColor="#CBD5E1"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvCin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CIN : "
                android:textSize="16sp"
                android:textColor="#CBD5E1" />
        </LinearLayout>

        <!-- OCR Update Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1E293B"
            android:padding="24dp"
            android:layout_marginBottom="24dp"
            android:elevation="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mettre à jour par CIN"
                android:textSize="20sp"
                android:textColor="#22C55E"
                android:textStyle="bold"
                android:layout_marginBottom="20dp" />

            <!-- Upload CIN Button -->
            <Button
                android:id="@+id/btnUploadCin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choisir une image CIN"
                android:textColor="#FFFFFF"

                android:textSize="16sp"
                android:background="#22C55E"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:padding="16dp" />

            <!-- CIN Image Preview -->
            <ImageView
                android:id="@+id/imgCin"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="20dp"
                android:scaleType="centerCrop"
                android:background="#0F172A"
                android:visibility="gone"
                android:contentDescription="Image CIN" />

            <!-- OCR Fields -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Données extraites :"
                android:textSize="16sp"
                android:textColor="#94A3B8"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/tNom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nom extrait"
                android:background="#0F172A"
                android:textColor="#FFFFFF"
                android:padding="16dp"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp" />

            <EditText
                android:id="@+id/tPrenomTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Prénom extrait"
                android:background="#0F172A"
                android:textColor="#FFFFFF"
                android:padding="16dp"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp" />

            <EditText
                android:id="@+id/tCinOcr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CIN extrait"
                android:background="#0F172A"
                android:textColor="#FFFFFF"
                android:padding="16dp"
                android:textSize="16sp"
                android:layout_marginBottom="20dp"
                android:elevation="4dp" />

            <!-- Hidden OCR Raw Text (for debugging) -->
            <TextView
                android:id="@+id/tvOcrRaw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <!-- Confirm Button -->
            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirmer les modifications"
                android:textSize="16sp"
                android:background="#3B82F6"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:padding="16dp" />
        </LinearLayout>

        <!-- Bac Button -->
        <Button
            android:id="@+id/btnGoToBac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voir mes notes Bac"
            android:textSize="16sp"
            android:background="#22C55E"
            android:textColor="#0A0F14"
            android:textStyle="bold"
            android:padding="16dp"
            android:layout_marginBottom="8dp" />

        <!-- Footer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Votre profil est sécurisé"
            android:textSize="14sp"
            android:textColor="#64748B"
            android:gravity="center"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>